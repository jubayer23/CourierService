<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_itemName_lbl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Order Number"
                            style="@style/txtTitle" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:textStyle="bold"
                            android:paddingRight="3dp"
                            android:text=":"/>
                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/tv_order_number"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Rose Rose Rose"
                            style="@style/txtNormal"/>

                        <TextView
                            android:id="@+id/tv_new"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="NEW"
                            style="@style/txtNormal"
                            android:textColor="@color/red_dark"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_itemQuantity_lbl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Pickup"
                            style="@style/txtTitle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:textStyle="bold"
                            android:paddingRight="3dp"
                            android:text=":"/>
                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/tv_pickup_address"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="7 Chapman Street, E1 2NN, London, Uk."
                            style="@style/txtNormal"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_price_lbl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Destination"
                            style="@style/txtTitle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:textStyle="bold"
                            android:paddingRight="3dp"
                            android:text=":"/>
                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/tv_destination_address"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="11 Chapman Streer, E1 2NN, London, UK"
                            style="@style/txtNormal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_comment_lbl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Due Date"
                            style="@style/txtTitle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:textStyle="bold"
                            android:paddingRight="3dp"
                            android:text=":"/>
                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/tv_due_date"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="18th March 11:59PM"
                            style="@style/txtNormal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sold_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="Details"
                            android:layout_marginRight="5dp"
                            android:id="@+id/btn_details"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_selector_blue_deep_round"/>


                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="Route"
                            android:id="@+id/btn_route"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_selector_blue_deep_round"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="Start"
                            android:id="@+id/btn_start"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_selector_blue_deep_round"/>
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/person_photo"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/person_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_name"
                android:layout_toRightOf="@+id/person_photo" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>